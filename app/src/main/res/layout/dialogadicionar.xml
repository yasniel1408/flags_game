<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">




        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/previewFoto"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/persona" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_edit_white_36dp"
                android:background="#ede68312"
                android:id="@+id/fotoSelect"
                />
        </LinearLayout>


        <EditText
            android:id="@+id/nombreConApellidosDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/nombreA" />




        <android.support.v7.widget.AppCompatButton
            android:id="@+id/adicionarYa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/enviar"
            app:backgroundTint="@color/colorAccent"
            android:textAllCaps="true"
            android:textColor="@android:color/white" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>